<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:context=".View.Activities.PacketsListViewActivity">

        <TextView android:layout_width="251dp"
                  android:layout_height="63dp"
                  android:id="@+id/txtViewName"
                  android:gravity="center|left"
                  app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
                  android:text="my name"
                  android:layout_marginEnd="136dp" android:paddingLeft="5dp" android:textStyle="bold"
                  app:layout_constraintStart_toStartOf="parent"/>
        <TextView android:layout_width="251dp"
                  android:layout_height="58dp"
                  android:id="@+id/txtViewDescription"
                  android:gravity="left"
                  app:layout_constraintTop_toBottomOf="@+id/txtViewName" app:layout_constraintEnd_toEndOf="parent"
                  android:text="my decription"
                  android:paddingStart="5dp" app:layout_constraintStart_toStartOf="parent"
                  app:layout_constraintHorizontal_bias="0.0"/>
        <Button
                android:text="Открыть"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/button"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="16dp" android:layout_marginEnd="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/txtViewName" app:layout_constraintHorizontal_bias="0.0"/>
        <TextView
                android:text="0%"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textViewProgress"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="24dp" android:layout_marginEnd="16dp"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toEndOf="@+id/progressBar"
                android:layout_marginStart="10dp" app:layout_constraintHorizontal_bias="0.238" android:textSize="12sp"/>
        <ProgressBar
                android:id="@+id/progressBar"
                style="@android:style/Widget.Material.Light.ProgressBar.Horizontal"
                android:layout_width="100dp"
                android:layout_height="0dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:progress="20"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="24dp" app:layout_constraintStart_toEndOf="@+id/txtViewDescription"
                android:progressTint="#673AB7" android:scrollbarSize="4dp"
                android:backgroundTintMode="add"
                android:nestedScrollingEnabled="false" android:minHeight="16dp" android:maxHeight="16dp"
                android:progressBackgroundTintMode="src_in" android:outlineProvider="none"
                android:layout_marginStart="4dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>