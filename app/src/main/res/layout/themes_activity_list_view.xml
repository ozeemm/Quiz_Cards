<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:context=".View.Activities.ThemesListViewActivity">
        <TextView android:layout_width="258dp"
                  android:layout_height="65dp"
                  android:id="@+id/txtViewName"
                  android:gravity="center|left"
                  app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
                  android:text="my name"
                  android:layout_marginEnd="136dp" android:paddingLeft="7dp" android:textStyle="bold"
                  app:layout_constraintStart_toStartOf="parent"/>
        <TextView android:layout_width="258dp"
                  android:layout_height="55dp"
                  android:id="@+id/txtViewDescription"
                  android:gravity="left"
                  app:layout_constraintTop_toBottomOf="@+id/txtViewName" app:layout_constraintEnd_toEndOf="parent"
                  android:text="my decription"
                  android:paddingStart="7dp" app:layout_constraintStart_toStartOf="parent"
                  app:layout_constraintHorizontal_bias="0.0"/>
        <Button
                android:text="Открыть"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/buttonOpen"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="10dp" android:layout_marginEnd="16dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="11dp"
                app:layout_constraintStart_toEndOf="@+id/txtViewName" app:layout_constraintHorizontal_bias="0.0"/>
        <TextView
                android:text="Пакетов: "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textViewPackCol"
                android:layout_marginEnd="36dp" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="36dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>