<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            xmlns:android="http://schemas.android.com/apk/res/android" >
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:context=".View.Activities.PacketsActivity" android:id="@+id/liLayout">


        <ListView
                android:layout_width="395dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:id="@+id/packetsListView"
                android:layout_height="720dp" app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="55dp"
                app:layout_constraintStart_toStartOf="parent"/>
        <TextView
                android:text="Тема: "
                android:layout_width="395dp"
                android:layout_height="55dp" android:id="@+id/textViewThemeName"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent" android:textColor="#FFFFFF" android:textSize="24sp"
                android:textStyle="normal" android:background="#673AB7" android:gravity="center_vertical"
                android:paddingStart="10dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>

